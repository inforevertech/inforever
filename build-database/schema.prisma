// database
datasource db {
  provider = "mysql"
  url      = "mysql://root:1@localhost:3306/inforever_db"
}

// generator
generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = 5
}

// data models
model Post {
  id        Int     @id @default(autoincrement())
  hash      String  @unique
  block     String
  text      String

  from      String
  to        String

  timestamp DateTime
}
