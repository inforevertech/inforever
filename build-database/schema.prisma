// database
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// generator
generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = 5
}

// data models
model Post {
  id    Int    @id @default(autoincrement())
  hash  String @unique
  block String
  text  String @db.LongText

  // address_from AddressTransaction[]

  timestamp DateTime
  nonsense  Boolean  @default(false)
}

model Sender {
  id        Int    @id @default(autoincrement())
  // post      Post   @relation(fields: [post_hash], references: [hash])
  post_hash String
  address_from String
}
