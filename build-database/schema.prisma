// database
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// generator
generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = 5
}

// data models
model Post {
  id    Int    @id @default(autoincrement())
  hash  String @unique
  block String
  text  String @db.LongText

  timestamp DateTime
}

model AddressTransaction {
  id           Int     @id @default(autoincrement())
  post_id      Int
  address_from String?
  address_to   String?
}

model User {
  id       Int     @id @default(autoincrement())
  address  String
  nickname String? @unique

  signup_date DateTime
}
