// database
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// generator
generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = 5
}

// data models
model Post {
  id    Int    @id @default(autoincrement())
  hash  String @unique
  block String
  text  String

  address_from String
  address_to   String

  timestamp DateTime
}

model User {
  id       Int     @id @default(autoincrement())
  address  String
  nickname String? @unique

  signup_date String?
}
